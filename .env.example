# ===== BASE CONFIGURATION =====
CONTAINER_NAME=happy-ttyd
TTYD_PORT=7681
TTYD_USER=root

# ===== BUILD-TIME CONFIGURATION =====
# Enable proxy during container build (image creation)
USE_BUILD_PROXY=false
BUILD_HTTP_PROXY=
BUILD_HTTPS_PROXY=
BUILD_NO_PROXY=

# Node.js version (Alpine package)
NODE_VERSION=24

# Additional APK packages to install (space-separated)
# These will be added to the default runtime packages
# Example: EXTRA_APK_PACKAGES="python3 py3-pip wget"
EXTRA_APK_PACKAGES="git fastfetch go python3 uv"

# Additional NPM packages to install globally (space-separated)
# Example: EXTRA_NPM_PACKAGES="typescript nodemon pm2"
EXTRA_NPM_PACKAGES="happy-coder"

# ===== MCP SERVER CONFIGURATION =====
# Enable MCP server installation in container
INSTALL_MCP_SERVERS=true

# MCP Server repositories (space-separated list)
# Each repo will be cloned into /mcp-server/<repo-name>
# Format: "https://github.com/user/repo1 https://github.com/user/repo2"
MCP_SERVER_REPOS="https://github.com/kwli3229/whatsapp-mcp"

# Base path for MCP servers (all repos cloned here)
MCP_SERVER_BASE_PATH=/mcp-server

# ===== RUNTIME CONFIGURATION =====
# Enable proxy when container is running
USE_RUNTIME_PROXY=false
RUNTIME_HTTP_PROXY=
RUNTIME_HTTPS_PROXY=
RUNTIME_NO_PROXY=

# ===== CONTAINER REGISTRY CONFIGURATION =====
# GitHub Container Registry configuration
USE_GHCR=false
GHCR_USERNAME=
GHCR_TOKEN=
GHCR_REPOSITORY=happy-ttyd

# ===== HAPPY CODER CONFIGURATION =====
# Configuration for Happy Coder (Anthropic API)
ANTHROPIC_BASE_URL=
ANTHROPIC_AUTH_TOKEN=
ANTHROPIC_MODEL=
ANTHROPIC_SMALL_FAST_MODEL=